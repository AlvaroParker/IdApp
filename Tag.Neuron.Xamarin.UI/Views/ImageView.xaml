<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tag.Neuron.Xamarin.UI.Views.ImageView"
             x:Name="TheImageView">
    <ContentView.Content>
        <Grid Background="#80CCC">
            <Frame x:Name="PhotoViewer" HasShadow="true" BackgroundColor="{DynamicResource HeadingBackgroundTranslucent}" Opacity="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid WidthRequest="400" HeightRequest="400" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="{Binding Path=Source, Source={x:Reference TheImageView}}" Aspect="AspectFill"/>
            </Grid>
        </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>