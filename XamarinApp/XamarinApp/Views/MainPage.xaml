<?xml version="1.0" encoding="utf-8" ?>
<views:ContentBasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Tag.Sdk.UI.Views;assembly=Tag.Sdk.UI"
             xmlns:local="clr-namespace:XamarinApp;assembly=XamarinApp"
             x:Class="XamarinApp.Views.MainPage"
             Title="{x:Static local:AppResources.MainPageTitle}">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="{StaticResource DefaultMargin}">
            <Label Text="{x:Static local:AppResources.Connection}" FontSize="Large" />
            <BoxView Color="{StaticResource AccentColor}" HeightRequest="3" />
            <Label Text="{Binding Path=ConnectionStateText}" HorizontalOptions="StartAndExpand" LineBreakMode="WordWrap" Margin="{StaticResource DefaultBottomOnlyMargin}"/>
            <Label Text="{x:Static local:AppResources.General}" FontSize="Large"/>
            <BoxView Color="{StaticResource AccentColor}" HeightRequest="3" />
            <Button Text="{x:Static local:AppResources.Identity}" Clicked="ViewIdentityButton_Clicked" IsEnabled="{Binding Path=IsConnected}"/>
            <Button Text="{x:Static local:AppResources.Wallet}" IsEnabled="False"/>
            <Button Text="{x:Static local:AppResources.ScanQRCode}" Clicked="ScanQrCodeButton_Clicked" IsEnabled="{Binding Path=IsConnected}"/>
            <Button Text="{x:Static local:AppResources.Devices}" IsEnabled="False"/>
            <Label Text="{x:Static local:AppResources.Contracts}" FontSize="Large"/>
            <BoxView Color="{StaticResource AccentColor}" HeightRequest="3" />
            <Button Text="{x:Static local:AppResources.MyCreatedContracts}" Clicked="CreatedContractsButton_Clicked" IsEnabled="{Binding Path=IsConnected}"/>
            <Button Text="{x:Static local:AppResources.SignedContracts}" Clicked="SignedContractsButton_Clicked" IsEnabled="{Binding Path=IsConnected}"/>
            <Label Text="{x:Static local:AppResources.Notary}" FontSize="Large"/>
            <Button Text="{x:Static local:AppResources.NewContract}" Clicked="NewContractButton_Clicked" IsEnabled="{Binding Path=IsConnected}"/>
            <Label Text="Debug" FontSize="Large"/>
            <Button Text="Server Comms" Clicked="XmppCommunicationButton_Clicked" IsEnabled="{Binding Path=IsConnected}" Margin="{StaticResource DefaultBottomOnlyMargin}"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</views:ContentBasePage>